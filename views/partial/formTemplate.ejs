<!DOCTYPE html>
<html>
  <head>
    <%- include('../partial/header') %>
  </head>
  <body>
    <%- include('../partial/navbar') %>
    <div class="container mt-4">
      <div class="row">
        <nav>
          <ol class="breadcrumb">
            <% form.breadcrumbs.forEach(breadcrumb => { %> <% if
            (breadcrumb.href === '') { %>
            <li class="breadcrumb-item active"><%= breadcrumb.text %></li>
            <% } else { %>
            <li class="breadcrumb-item">
              <a href="<%= breadcrumb.href %>"><%= breadcrumb.text %></a>
            </li>
            <% } %> <%}); %>
          </ol>
        </nav>
      </div>

      <div class="row">
        <div class="col-md-8">
          <h1 class="mb-2"><%= form.title %></h1>
          <p class="mb-4 text-muted">
            <small><i><%= form.notes %></i></small>
          </p>

          <form action="<%= form.formAction%>" method="<%= form.method%>">
            <% form.fields.forEach(field => { %>

            <div class="row mb-3">
              <label for="<%= field.name%>" class="col-sm-3 col-form-label"
                ><%= field.label %>
              </label>

              <div class="col-sm-9">
                <% if (field.type === 'select') { %>

                <select
                  class="form-select"
                  name="<%= field.name %>"
                  id="<%= field.name %>"
                >
                  <option value="" hidden selected>Select from dropdown</option>
                  <% field.options.forEach(option => { %> <% if (option.name ===
                  field.value) { %>
                  <option value="<%=option.id%>" selected>
                    <%=option.name%>
                  </option>
                  <% } else { %>
                  <option value="<%=option.id%>"><%=option.name%></option>
                  <% } %> <% }) %>
                </select>
                <% } else { %> <% if (!field.readonly) {%>
                <input
                  type="<%= field.type %>"
                  class="form-control"
                  id="<%= field.name%>"
                  name="<%= field.name%>"
                  placeholder="<%= field.placeholder %>"
                  value="<%= field.value %>"
                />
                <% } else { %>
                <input
                  type="<%= field.type %>"
                  class="form-control"
                  id="<%= field.name%>"
                  name="<%= field.name%>"
                  placeholder="<%= field.placeholder %>"
                  value="<%= field.value %>"
                  readonly
                />
                <% } %> <% } %>
              </div>
            </div>
            <% }); %>

            <div class="row mb-3 justify-content-end">
              <div class="col-sm-9">
                <input
                  class="btn btn-primary"
                  type="submit"
                  value="<%= form.submitVal %>"
                />
                <a class="btn btn-danger" href="<%= form.onCancel %>"
                  ><%= form.cancelVal %>
                </a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include('../partial/requiredJS') %>
  </body>
</html>
