<!DOCTYPE html>
<html>
  <head>
    <%- include('../partial/header') %>
  </head>
  <body>
    <%- include('../partial/navbar') %>
    <div class="container mt-4">
      <h1>Employment Types</h1>
      <hr class="my-4" />
      <div class="row">
        <div class="col">
          <a href="/employment" class="btn btn-outline-primary"
            >+ employment type</a
          >
        </div>

        Put search bar and filters here
      </div>
      <div class="row">
        <div class="col">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Type</th>
                <th scope="col">Name</th>
                <th scope="col">Rate</th>
                <th scope="col">Edit</th>
              </tr>
            </thead>
            <tbody>
              <% allEmployment.forEach(employment => { %>
              <tr>
                <td><%= employment.type%></td>
                <td><%= employment.name %></td>
                <td>$ <%= employment.rate %></td>
                <td>Edit button here</td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
