<!DOCTYPE html>
<html>
  <head>
    <%- include('../partial/header') %>
  </head>
  <body>
    <%- include('../partial/navbar') %>
    <div class="container mt-4">
      <div class="container mt-4">
      <div class="row">
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/instructors">instructors</a>
            </li>
            <li class="breadcrumb-item active">employment types</li>
          </ol>
        </nav>
      </div>

      <h1>Employment Types</h1>
      <hr class="my-4" />
      <div class="row">
        <div class="col">
          <a href="/employment/new" class="btn btn-primary"
            >+ employment type</a
          >
        </div>

        <p>Put search bar and filters here</p>
      </div>
      <div class="row">
        <div class="col">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Type</th>
                <th scope="col">Name</th>
                <th scope="col">Rate</th>
                <th scope="col">Edit</th>
              </tr>
            </thead>
            <tbody>
              <% allEmployment.forEach(employment => { %>
              <tr>
                <td><%= employment.type%></td>
                <td><%= employment.name %></td>
                <td>$ <%= employment.rate %></td>
                <td><a href="/employment/edit/<%= employment.id%>"><i class="bi bi-pencil-fill"></i></a></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <%- include('../partial/requiredJS') %>
  </body>
</html>
